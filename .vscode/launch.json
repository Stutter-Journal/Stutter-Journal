{
  "version": "0.2.0",
  "configurations": [
    // ==========================================
    // Python Backend
    // ==========================================
    {
      "name": "Backend: Debug Current Python File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "cwd": "${workspaceFolder}/apps/backend",
      "console": "integratedTerminal",
      "justMyCode": true,
      "env": {
        "PYTHONPATH": "${workspaceFolder}/apps/backend/src"
      }
    },
    // ==========================================
    // Desktop (Nx Workspace)
    // ==========================================
    {
      "name": "Desktop: Serve Portal (Nx)",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpm nx serve portal",
      "cwd": "${workspaceFolder}/apps/desktop",
      "preLaunchTask": "Desktop: Install Dependencies"
    },
    {
      "name": "Desktop: Serve Shop (Nx)",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpm nx serve shop",
      "cwd": "${workspaceFolder}/apps/desktop",
      "preLaunchTask": "Desktop: Install Dependencies"
    },
    {
      "name": "Desktop: Serve API (Nx)",
      "type": "node-terminal",
      "request": "launch",
      "command": "pnpm nx serve api",
      "cwd": "${workspaceFolder}/apps/desktop",
      "preLaunchTask": "Desktop: Install Dependencies"
    }
  ]
}

{
  "$schema": "http://json-schema.org/schema",
  "cli": "nx",
  "$id": "TagUiLibs",
  "title": "Tag UI Libraries",
  "type": "object",
  "description": "Add tags to all UI component libraries",
  "properties": {
    "tags": {
      "type": "array",
      "description": "Tags to add to UI libraries",
      "default": ["type:ui", "scope:shared"],
      "items": {
        "type": "string"
      }
    },
    "pattern": {
      "type": "string",
      "description": "Glob pattern to match UI libraries",
      "default": "libs/ui/**"
    },
    "dryRun": {
      "type": "boolean",
      "description": "Run without making changes",
      "default": false
    }
  },
  "required": []
}
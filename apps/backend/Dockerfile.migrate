FROM arigaio/atlas:latest AS atlas

FROM alpine:latest

RUN apk add --no-cache ca-certificates

WORKDIR /work

COPY --from=atlas /atlas /usr/local/bin/atlas

# Ent migration directory (generated by ent with versioned migrations feature)
COPY ent/migrate/migrations ./ent/migrate/migrations

ENV BLUEPRINT_DB_MIGRATION_DIR=file:///work/ent/migrate/migrations

ENTRYPOINT ["/bin/sh", "-c"]
CMD ["atlas migrate apply --dir \"${BLUEPRINT_DB_MIGRATION_DIR}\" --url \"${DATABASE_URL}\""]
